{
  "extends": "astro/tsconfigs/base",
  "include": [
    ".astro/types.d.ts",
    "src/**/*",
    "**/*.astro"
  ],
  "exclude": [
    "dist",
    "node_modules"
  ],
  "compilerOptions": {
    "jsx": "preserve",
    "jsxImportSource": "solid-js",
    "allowJs": true,
    "checkJs": false,
    "isolatedModules": true,
    "strict": true,
    "noEmit": true,
    "paths": {
      "@components/*": ["./src/components/*"],
      "@layouts/*": ["./src/layouts/*"]
    },
    "types": [
      "astro/client",
      "vite/client"
    ]
  }
}